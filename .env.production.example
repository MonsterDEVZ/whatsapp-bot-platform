# ==============================================================================
# PRODUCTION - Railway Environment Variables
# ==============================================================================
#
# Эти переменные нужно установить в Railway Dashboard:
# Project Settings → Variables → Raw Editor → Paste
#
# ==============================================================================

# ==============================================================================
# DATABASE (Railway PostgreSQL - автоматически)
# ==============================================================================

DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}
DB_NAME=${{Postgres.PGDATABASE}}
DB_USER=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}

# ==============================================================================
# EVOPOLIKI - PRODUCTION
# ==============================================================================

EVOPOLIKI_WHATSAPP_INSTANCE_ID=7103XXXXXX
EVOPOLIKI_WHATSAPP_API_TOKEN=РЕАЛЬНЫЙ_ТОКЕН_ЗДЕСЬ
EVOPOLIKI_WHATSAPP_PHONE_NUMBER=+996XXXXXXXXX
EVOPOLIKI_WHATSAPP_API_URL=https://7103.api.green-api.com
EVOPOLIKI_ENABLE_DIALOG_MODE=true
EVOPOLIKI_OPENAI_API_KEY=sk-proj-РЕАЛЬНЫЙ_КЛЮЧ_ЗДЕСЬ
EVOPOLIKI_OPENAI_ASSISTANT_ID=asst_РЕАЛЬНЫЙ_ID_ЗДЕСЬ

# ==============================================================================
# FIVE_DELUXE - PRODUCTION
# ==============================================================================

FIVE_DELUXE_WHATSAPP_INSTANCE_ID=7104XXXXXX
FIVE_DELUXE_WHATSAPP_API_TOKEN=РЕАЛЬНЫЙ_ТОКЕН_ЗДЕСЬ
FIVE_DELUXE_WHATSAPP_PHONE_NUMBER=+996YYYYYYYYY
FIVE_DELUXE_WHATSAPP_API_URL=https://7104.api.green-api.com
FIVE_DELUXE_ENABLE_DIALOG_MODE=false

# ==============================================================================
# AIRTABLE - PRODUCTION
# ==============================================================================

AIRTABLE_API_KEY=keyXXXXXXXXXXXXXX
AIRTABLE_BASE_ID=appXXXXXXXXXXXXXX
AIRTABLE_TABLE_NAME=Заявки с ботов

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================

# Railway автоматически устанавливает PORT
# Не нужно указывать вручную

DEBUG=false


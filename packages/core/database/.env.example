# Database Configuration
# Скопируйте этот файл в .env и заполните реальными значениями

# Опция 1: Полный URL подключения (рекомендуется для production)
# DATABASE_URL=postgresql://username:password@localhost:5432/car_chatbot

# Опция 2: Отдельные параметры (удобно для локальной разработки)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=car_chatbot
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# SQLAlchemy settings
DB_ECHO=false  # true для логирования SQL запросов в консоль
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Application settings
ENVIRONMENT=development  # development, staging, production
